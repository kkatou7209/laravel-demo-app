{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/ts/src/*"]
        },
        "types": [
            "node",
            "vite/client"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "moduleResolution": "Node",
        "noEmit": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "noImplicitThis": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "sourceMap": true
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.vue",
        "resources/ts/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}
